<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/search_layou_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/place_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/saved_place_clock_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/search_Saved_place_address_title"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/colorDeepGrey"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/currentCustomerAddress"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/search_Saved_place_address_detail"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>